{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "target": "es5",
        "preserveConstEnums": true,
        "sourceMap": false,
        "noUnusedLocals": true,
        "allowUnreachableCode": true,
        "lib": [
            "es5",
            "es6",
            "webworker"
        ],
        "types": [],
        "noImplicitThis": true,
        "removeComments": true,
        "plugins": [
            { "name": "tslint-language-service"}
        ]
    },
    "include": [
        "stella/**/*.ts",
        "video-pipeline/**/*.ts",
        "../src/interface/setimmediate2.d.ts",
        "../typings/globals/seedrandom/index.d.ts"
    ]
}
