{
    "compilerOptions": {
        "allowJs": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "target": "es5",
        "preserveConstEnums": true,
        "sourceMap": false,
        "noLib": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "../src/interface/**/*.ts",
        "../node_modules/typescript/lib/lib.webworker.d.ts"
    ],
    "files": [
        "src/main.ts",
        "../src/interface/es6-bits.d.ts",
        "../src/interface/jquery.terminal.d.ts",
        "../src/interface/screenfull.d.ts",
        "../node_modules/typescript/lib/lib.webworker.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
