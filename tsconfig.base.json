{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "target": "es6",
        "sourceMap": true,
        "jsx": "react",
        "allowUnreachableCode": true,
        "downlevelIteration": true,
        "importHelpers": true,
        "lib": [
            "dom",
            "es5",
            "es6"
        ],
        "noImplicitThis": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ]
    }
}
