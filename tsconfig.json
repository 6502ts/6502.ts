{
    "compilerOptions": {
        "allowJs": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "target": "es5",
        "sourceMap": false,
        "jsx": "react",
        "lib": [
            "dom",
            "es5",
            "es6"
        ],
        "noImplicitThis": true,
        "removeComments": true,
        "outDir": "compiled"
    },
    "include": [
        "bin/*.ts",
        "src/**/*.ts",
        "tests/**/*.ts",
        "src/web/stella/stellerator/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
